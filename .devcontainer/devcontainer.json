{
	"name": "OS-Course-Lab-Dev",
	"image": "ipads/oslab:25.03",
	"remoteUser": "stu",
	"updateRemoteUserUID": true,
	"runArgs": [
		"--hostname", "Chcore",
		"--memory=4g",
		"--cpus=2",
		"--pull=never"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.hexeditor",
				"llvm-vs-code-extensions.vscode-clangd",
				"ms-vscode.makefile-tools",
				"twxs.cmake",
				"dan-c-underwood.arm"
			]
		}
	}
}
